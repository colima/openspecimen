<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class
    name="com.krishagni.catissueplus.core.administrative.domain.PrintRule"
    table="OS_PRINT_RULES">
	
    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">OS_PRINT_RULES_SEQ</param>
      </generator>
    </id>

    <many-to-one name="user" column="USER_ID"/>

    <many-to-one name="site" column="SITE_ID"/>

    <many-to-one name="collectionProtocol" column="CP_ID"/>

    <property name="ipRange" column="IP_RANGE"/>

    <property name="labelType" column="LABEL_TYPE"/>

    <property name="labelDesign" column="LABEL_DESIGN"/>

    <property name="printerName" column="PRINTER"/>

    <property name="cmdFileFormat" column="CMD_FILE_FMT"/>

    <property name="cmdFileDirectory" column="CMD_FILE_DIR"/>

    <property name="activityStatus" column="ACTIVITY_STATUS"/>

    <set name="tokens" table="OS_PRINT_LABEL_TOKENS" cascade="all-delete-orphan">
      <key column="RULE_ID" />
      <element column="TOKEN" type="string" />
    </set>

    <filter name="activeEntity"/>

    <query name="getVisitPrintRules">
      from
        com.krishagni.catissueplus.core.administrative.domain.PrintRule
      where
        activityStatus != 'Disabled'
    </query>

  </class>

  <joined-subclass name="com.krishagni.catissueplus.core.administrative.domain.SpecimenPrintRule" table="os_specimen_print_rules"
                   extends="com.krishagni.catissueplus.core.administrative.domain.PrintRule">
    <key column="RULE_ID"></key>
      <property name="specimenClass" column="SPECIMEN_CLASS"></property>
      <property name="specimenType" column="SPECIMEN_TYPE"></property>
  </joined-subclass>

</hibernate-mapping>
